<Window x:Class="CS4_DesktopFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1200" DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Grid>
        <TabControl HorizontalAlignment="Left"
		    Height="690"
		    Margin="10,10,10,10"
		    VerticalAlignment="Top"
		    Width="1290"
		    SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Login" Margin="0,0,-4.4,-2">
                <Grid Background="#FFE5E5E5" Margin="0,-1,-684,-361">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="91*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10,10,0,0"
			       TextWrapping="Wrap"
			       Text="Take pictures of me and put them on the Internet. Meow."
			       VerticalAlignment="Top"
			       Width="471" Height="16"/>
                    <Button Content="Login" HorizontalAlignment="Left" Margin="214,182,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click" RenderTransformOrigin="0.347,2.75" Height="20"/>
                    <TextBox HorizontalAlignment="Left" Height="22" Margin="194,84,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <PasswordBox HorizontalAlignment="Left" Margin="194,120,0,0" VerticalAlignment="Top" Width="120" Height="22" Password="23423"/>
                    <TextBlock HorizontalAlignment="Left" Margin="120,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Height="16"><Run Text="Usernam"/><Run Text="e"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="120,121,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Height="16" Width="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="Book Appointment">
                <Grid Background="#FFE5E5E5" Margin="0,0,-687,-363">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="480*"/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10,10,0,0"
			       TextWrapping="Wrap"
			       VerticalAlignment="Top"
			       Width="471" Height="16" Grid.ColumnSpan="2"/>
                    <Calendar HorizontalAlignment="Left" Margin="0,64,0,0" VerticalAlignment="Top" Height="168" Width="198" Grid.Column="1"/>
                    <Grid Grid.Column="2" HorizontalAlignment="Left" Height="379" Margin="9.5,209,0,0" VerticalAlignment="Top" Width="384"/>
                    <DataGrid HorizontalAlignment="Left" Margin="0,254,0,0" VerticalAlignment="Top" Height="349" Width="378" Grid.Column="1" RenderTransformOrigin="0.492,0.511"/>
                    <Label Content="Book Apointment" Grid.Column="1" HorizontalAlignment="Left" Margin="482,22,0,0" VerticalAlignment="Top" Height="38" Width="246"/>
                    <Button Content="Edit Appointment" Grid.Column="1" HorizontalAlignment="Left" Margin="461,528,0,0" VerticalAlignment="Top" Width="122"/>
                    <Button Content="Remove Appointment" Grid.Column="1" HorizontalAlignment="Left" Margin="461,568,0,0" VerticalAlignment="Top" Width="122"/>
                    <DatePicker Grid.Column="1" HorizontalAlignment="Left" Margin="719,209,0,0" VerticalAlignment="Top"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="857,209,0,0" TextWrapping="Wrap" Text="12:00" VerticalAlignment="Top" Width="44"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="857,237,0,0" TextWrapping="Wrap" Text="13:00" VerticalAlignment="Top" Width="44"/>
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="810,285,0,0" VerticalAlignment="Top" Width="131"/>
                    <Label Content="Treatment" Grid.Column="1" HorizontalAlignment="Left" Margin="719,285,0,0" VerticalAlignment="Top"/>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="266" Margin="710,142,0,0" VerticalAlignment="Top" Width="254"/>
                    <Button Content="Save Appointment" Grid.Column="1" HorizontalAlignment="Left" Margin="810,360,0,0" VerticalAlignment="Top" Width="112"/>
                    <Label Content="Select a Patient" Grid.Column="1" HorizontalAlignment="Left" Margin="719,155,0,0" VerticalAlignment="Top"/>
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="821,155,0,0" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="EHR">
                <Grid Background="#FFE5E5E5">
                    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="70" Margin="50,62,0,0" Stroke="Black" VerticalAlignment="Top" Width="354"/>
                    <ComboBox HorizontalAlignment="Left" Margin="188,88,0,0" VerticalAlignment="Top" Width="193"/>
                    <Label Content="Choose Patient" HorizontalAlignment="Left" Margin="67,88,0,0" VerticalAlignment="Top"/>
                    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="70" Margin="50,176,0,0" Stroke="Black" VerticalAlignment="Top" Width="354"/>
                    <Button Content="Create new Customer" HorizontalAlignment="Left" Margin="241,201,0,0" VerticalAlignment="Top" Width="142"/>
                    <Label Content="Create new Customer" HorizontalAlignment="Left" Margin="67,201,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="EHR1">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="has to be hidden; after pressing 'CREATE new patient' in tab EHR you can see this tab"
			       VerticalAlignment="Top"
			       Width="471"/>
                </Grid>
            </TabItem>
            <TabItem Header="EHR2">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="has to be hidden; after inserting name into 'search for patient' in tab EHR you can see this tab"
			       VerticalAlignment="Top"
			       Width="471"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

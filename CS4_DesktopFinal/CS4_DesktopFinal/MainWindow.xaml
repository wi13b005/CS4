<Window x:Class="CS4_DesktopFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:CS4_DesktopFinal.ViewModel"
        xmlns:View="clr-namespace:CS4_DesktopFinal.Views"
        Title="MainWindow" Height="700" Width="1200"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
  <Window.Resources>
    <DataTemplate DataType="{x:Type ViewModel:MainVM}">
            <View:MainView/>      
    </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:LoginViewModel}">
            <View:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:NewCustomerViewModel}">
            <View:NewCustomerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:EditViewModel}">
            <View:EditView/>
        </DataTemplate>
    </Window.Resources>
</Window>

<Window x:Class="CS4_DesktopFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <TabControl HorizontalAlignment="Left"
		    Height="690"
		    Margin="10,10,10,10"
		    VerticalAlignment="Top"
		    Width="1290"
		    SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Login">
                <Grid Background="#FFE5E5E5" Margin="0,-1,-684,-361">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="91*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10,10,0,0"
			       TextWrapping="Wrap"
			       Text="Take pictures of me and put them on the Internet. Meow."
			       VerticalAlignment="Top"
			       Width="471" Height="16"/>
                    <Button Content="Login" HorizontalAlignment="Left" Margin="214,182,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click" RenderTransformOrigin="0.347,2.75" Height="20"/>
                    <TextBox HorizontalAlignment="Left" Height="22" Margin="194,84,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <PasswordBox HorizontalAlignment="Left" Margin="194,120,0,0" VerticalAlignment="Top" Width="120" Height="22" Password="23423"/>
                    <TextBlock HorizontalAlignment="Left" Margin="120,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Height="16"><Run Text="Usernam"/><Run Text="e"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="120,121,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Height="16" Width="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="Book Appointment">
                <Grid Background="#FFE5E5E5" Margin="0,0,-687,-363">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="480*"/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10,10,0,0"
			       TextWrapping="Wrap"
			       VerticalAlignment="Top"
			       Width="471" Height="16" Grid.ColumnSpan="2"/>
                    <Calendar HorizontalAlignment="Left" Margin="0,94,0,0" VerticalAlignment="Top" Height="168" Width="198" Grid.Column="1"/>
                    <Grid Grid.Column="2" HorizontalAlignment="Left" Height="379" Margin="9.5,209,0,0" VerticalAlignment="Top" Width="384"/>
                    <DataGrid HorizontalAlignment="Left" Margin="0,301,0,0" VerticalAlignment="Top" Height="302" Width="432" Grid.Column="1" RenderTransformOrigin="0.492,0.511"/>
                    <Label Content="Book Apointment" Grid.Column="1" HorizontalAlignment="Left" Margin="432,26,0,0" VerticalAlignment="Top" Height="38" Width="246"/>
                    <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="461,528,0,0" VerticalAlignment="Top" Width="76"/>
                    <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="461,568,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="EHR">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="Take pictures of me and put them on the Internet. Meow."
			       VerticalAlignment="Top"
			       Width="471"/>
                </Grid>
            </TabItem>
            <TabItem Header="EHR1">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="has to be hidden; after pressing 'CREATE new patient' in tab EHR you can see this tab"
			       VerticalAlignment="Top"
			       Width="471"/>
                </Grid>
            </TabItem>
            <TabItem Header="EHR2">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="has to be hidden; after inserting name into 'search for patient' in tab EHR you can see this tab"
			       VerticalAlignment="Top"
			       Width="471"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
